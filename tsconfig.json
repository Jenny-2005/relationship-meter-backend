{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,

    "strict": true,
    "esModuleInterop": true,

    "types": ["node"],

    "skipLibCheck": true
  }
}